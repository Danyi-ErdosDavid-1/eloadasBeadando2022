      <children>
         <ComboBox fx:id="cb1" prefWidth="400.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         <TextField fx:id="tf1" promptText="Vizsgázó neve" GridPane.columnIndex="1" GridPane.rowIndex="1" />
          <fx:define><ToggleGroup fx:id="group" /></fx:define>
          <RadioButton toggleGroup="$group" fx:id="rb1" mnemonicParsing="false" text="9" GridPane.columnIndex="4" GridPane.rowIndex="1" />
          <RadioButton toggleGroup="$group" fx:id="rb2" mnemonicParsing="false" text="10" GridPane.columnIndex="4" GridPane.rowIndex="2" />
