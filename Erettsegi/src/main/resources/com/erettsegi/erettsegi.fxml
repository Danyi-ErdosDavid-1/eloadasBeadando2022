         <CheckBox fx:id="ch2" mnemonicParsing="false" text="Írásbelin elérhető max. pontszám kevesebb vagy egyenlő, mint 90" GridPane.columnIndex="1" GridPane.rowIndex="4" />
         <CheckBox fx:id="ch3" mnemonicParsing="false" text="Szóbelin elérhető max. pontszám 50 -nél több" GridPane.columnIndex="3" GridPane.rowIndex="3" />
         <CheckBox fx:id="ch4" mnemonicParsing="false" text="Írásbelin elérhető max. pontszám 90 -nél több" GridPane.columnIndex="3" GridPane.rowIndex="4" />
         <Button fx:id="btnSzuro" onAction="#btnSzuro" alignment="CENTER" mnemonicParsing="false" text="Szűrés" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="5" GridPane.valignment="CENTER" />
         <Label text="Megadhat szűrőfeltételeket:" GridPane.columnIndex="1" />
         <Label fx:id="errorForSzures" text="Label" textFill="#da0c0c" GridPane.columnIndex="1" GridPane.rowIndex="6" />
         <Label text="Osztály:" GridPane.columnIndex="3" GridPane.rowIndex="1" />
      </children>
   </GridPane>
   <GridPane fx:id="gr2">
     <columnConstraints>
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="10.0" />
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
