            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <children>
            <Label text="Módosíthat egy vizsgázó személyt a vizsgazo táblából. Válassza ki a módosítani kívánt táblarekord azonosítóját:" GridPane.columnIndex="1" GridPane.rowIndex="1" />
